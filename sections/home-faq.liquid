<section class="faq_sec_accordian py_8">
        <div class="container">
          <div class="faq_title">
            <h2>{{ section.settings.heading }}</h2>
          </div>
          <div class="row align-items-center">
            <div class="col-md-7">
              <div class="accordian_faq_sec">
                <div class="accordion accordion-flush"
                  id="accordionFlushExample">
                  {% for block in section.blocks %}
                    {% assign count = count | plus: 1 %}
                  <div class="accordion-item">
                    <h2 class="accordion-header" id="flush-heading{{ count }}">
                      <button
                        class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#flush-collapse{{ count }}"
                        aria-expanded="false"
                        aria-controls="flush-collapse{{ count }}">
                       {{ block.settings.heading }}
                      </button>
                    </h2>
                    <div
                      id="flush-collapse{{ count }}"
                      class="accordion-collapse collapse"
                      aria-labelledby="flush-heading{{ count }}"
                      data-bs-parent="#accordionFlushExample">
                      <div class="accordion-body">
                       {{ block.settings.decsription }}
                      </div>
                    </div>
                  </div>
                  {% endfor %}

                  
                </div>
              </div>
            </div>
            <div class="col-md-5">
              <div class="faq_image">
               <img src="{{ section.settings.image | img_url: "master" }}" alt>
              </div>
            </div>
          </div>
        </div>
      </section>
{% schema %}
  {
    "name": "Home FAQ",
    "settings": [
       {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
      {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
    ],
     "blocks": [
  {
    "type": "faq",
    "name": "FAQ",
    "settings": [
      
      {
      "type": "html",
      "id": "heading",
      "label": "Heading"
    },
       {
      "type": "richtext",
      "id": "decsription",
      "label": "Description"
    }
    ]
  }
],
    
    "presets": [
      {
        "name": "Home FAQ"
      }
    ]
    
  }
{% endschema %}

