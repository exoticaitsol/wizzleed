<section class="benefit_of_brain py_8">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-md-8">
              <div class="benefit_txt_under">
                <div class="txt_b_fit">
                  <h2>{{ section.settings.heading }}</h2>
                  <h3>{{ section.settings.title }}</h3>
                  <p>{{ section.settings.decsription }}</p>
                  <div class="benefit_btn_pre">
                    <a href="{{ section.settings.btn-url }}" class="theme_btn">{{ section.settings.btn-text }}</a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-md-4">
              <div class="benefit_img">
                 <img src="{{ section.settings.image | img_url: "master" }}" alt>
              </div>
            </div>
          </div>
        </div>
      </section>

{% schema %}
   {
    "name": "Benefits of Brain",
    "settings": [
       {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
      {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    },
       {
      "type": "richtext",
      "id": "title",
      "label": "Title"
    },
       {
      "type": "richtext",
      "id": "decsription",
      "label": "Description"
    },
       {
      "type": "text",
      "id": "btn-text",
      "label": "Shop Now"
    },
       {
      "type": "url",
      "id": "btn-url",
      "label": "Button Url"
    }
    ],
    
    "presets": [
      {
        "name": "Benefits of Brain"
      }
    ]
    
  }
{% endschema %}

